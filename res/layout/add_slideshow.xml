<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="wrap_content" android:layout_height="wrap_content"
   android:orientation="vertical">
   <TextView android:layout_width="match_parent"
      android:layout_height="wrap_content" 
      android:text="@string/dialog_set_name_title"
      android:textColor="@android:color/white" android:gravity="center"/>
   <EditText android:id="@+id/add_slideshow_edit_text" 
      android:layout_width="400dp" android:layout_height="wrap_content"
      android:inputType="text" />
   <Button android:id="@+id/add_slideshow_button" 
      android:layout_width="match_parent" 
      android:layout_height="wrap_content" 
      android:text="@string/button_set_slideshow_name" />
</LinearLayout>